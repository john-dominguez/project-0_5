@using Project0.Models;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="text-center my-3">
    <h1 class="display-4">Restaurants</h1>
    <h4>The best of the worst</h4>
</div>

@Html.ActionLink("Create Restaurant", "Create", new { htmlAttributes = new { @class = "btn btn-primary" }})
<div class="row my-3">
    @foreach (var r in Model)
    {
        var colorClass = "border-primary";
        if (r.AverageRating() < 5) { colorClass = "border-danger"; }

        <div class="col-md-4 col-lg-3 mb-2">
            <div class="card @colorClass">
                <div class="card-body">
                    <h5 class="card-title">@r.name</h5>
                    <p class="card-text">Rating: @r.AverageRating().ToString("#.##")</p>
                    @Html.ActionLink("More Info", "Show", new { id = r.id })
                </div>
            </div>
        </div>
    }
</div> 